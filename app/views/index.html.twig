{% extends "layout.html.twig" %}
        {% block title %}Home - {{ parent() }}{% endblock %}
        {% block content %}
        <div class="col-md-6">
            <h2>Welcome to SunDev</h2>
            <p>
                SunDev assembles all the tools we have made to produce quality scripts faster.
            </p>
            {% if is_granted('ROLE_DEV') %}
            <div class="col-md-6">
                <h3>Development</h3>
                <ul>
                    <li><a href="{{ app.request.basepath }}/smartai">SmartAI</a></li>
                    <li><a href="{{ app.request.basepath }}/dungeon">SunDungeon</a></li>
                </ul>
            </div>
            {% endif %}
            {% if is_granted('ROLE_TESTER') %}
            <div class="col-md-6">
                <h3>Testing</h3>
                <ul>
                    <li><a href="{{ app.request.basepath }}/classes">SunClasses</a></li>
                    <li><a href="{{ app.request.basepath }}/quests">SunQuests</a></li>
                </ul>
            </div>
            {% endif %}
        </div>
        {% if is_granted('ROLE_ADMIN') %}
        <div class="col-md-6">
            <h2>Review</h2>
            <p>Code that needs to be validate before going on production.</p>
            <h3>SmartAI</h3>
            {% if scripts != null %}
            <table class="table table-hover">
                <thead>
                    <th width="20%">User</th>
                    <th width="55%">Name</th>
                    <th width="25%">Date</th>
                </thead>
                <tbody>
            {% for script in scripts %}
                    <tr>
                        <td>{{ script.user }}</td>
                        <td>
                            <a href="{{ app.request.basepath }}/smartai/{{ script.link }}{% if script.source_type == "4" %}/text{%  endif %}">
                                {% if script.source_type == "9" %}
                                    {{ script.name }} - Script {{ script.id }}
                                {% elseif script.source_type == "4" %}
                                    {{ script.name }} - Texts
                                {% else %}
                                    {{ script.name }}
                                {% endif %}
                            </a></li>
                        </td>
                        <td>{{ script.date|date("m-j-y G:i:s") }}</td>
                    </tr>
            {% endfor %}
                </tbody>
            </table>
            {% else %}
                <p>Nothing to review!</p>
            {% endif %}
        </div>
        {% endif %}
        {% endblock %}
        {% block script %}
        {% endblock %}