{% extends "layout.html.twig" %}
        {% block title %}Home - {{ parent() }}{% endblock %}
        {% block head %}
            <style type="text/css">
                .glyphicon {
                    cursor: pointer;
                }
                .ok,
                .table-hover > tbody > tr.ok:hover > td {
                    background-color: #ABFF92!important;
                }
                .bug,
                .table-hover > tbody > tr.bug:hover > td {
                    background-color: #FF9595!important;
                }
            </style>
        {% endblock %}
        {% block content %}
        <div class="col-md-6">
            <h2>Welcome to SunDev</h2>
            <p>
                SunDev assembles all the tools we have made to produce quality scripts faster.
            </p>
            {% if is_granted('ROLE_DEV') %}
            <div class="col-md-6">
                <h3>Development</h3>
                <ul>
                    <li><a href="{{ app.request.basepath }}/smartai">SmartAI</a></li>
                    <li><a href="{{ app.request.basepath }}/dungeon">SunDungeon</a></li>
                </ul>
            </div>
            {% endif %}
            {% if is_granted('ROLE_TESTER') %}
            <div class="col-md-6">
                <h3>Testing</h3>
                <ul>
                    <li><a href="{{ app.request.basepath }}/classes">SunClasses</a></li>
                    <li><a href="{{ app.request.basepath }}/quests">SunQuests</a></li>
                </ul>
            </div>
            {% endif %}
            {% if is_granted('ROLE_DEV') %}
            <div class="col-md-12">
                <hr>
                <h3>My reviews</h3>
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>Date</th>
                            <th>Code</th>
                            <th>State</th>
                            <th>Validation</th>
                        </tr>
                    </thead>
                    <tbody>
                    {% for script in scripts %}
                        {% if script.user == app.user.id %}
                            <tr {% if script.state == 1 %}class="ok"{% elseif script.state == 2 %}class="bug"{% else %}{% endif %}>
                                <td>{{ script.date|date("m-j-y G:i:s") }}</td>
                                <td>
                                    {% if script.source_type == 0 %}
                                        {% if script.entryorguid > 0 %}
                                            <a href="{{ app.request.basepath }}/smartai/creature/entry/{{ script.entryorguid }}">{{ script.entryorguid|getCreatureName }}</a>
                                        {% else %}
                                            <a href="{{ app.request.basepath }}/smartai/creature/guid/{{ script.entryorguid|abs }}">{{ script.entryorguid|getCreatureName }}</a>
                                        {% endif %}
                                    {% elseif script.source_type == 1 %}
                                        {% if script.entryorguid > 0 %}
                                            <a href="{{ app.request.basepath }}/smartai/object/entry/{{ script.entryorguid }}">{{ script.entryorguid|getGOName }}</a>
                                        {% else %}
                                            <a href="{{ app.request.basepath }}/smartai/object/guid/{{ script.entryorguid|abs }}">{{ script.entryorguid|getGOName }}</a>
                                        {% endif %}
                                    {% elseif script.source_type == 3 %}
                                        {% if script.path > 0 %}
                                            <a href="{{ app.request.basepath }}/smartai/creature/entry/{{ script.entryorguid }}">{{ script.entryorguid|getCreatureName }}</a> - Set Path {{ script.path }}
                                        {% else %}
                                            <a href="{{ app.request.basepath }}/smartai/creature/entry/{{ script.entryorguid }}">{{ script.entryorguid|getCreatureName }}</a> - Replace with Path {{ script.path|abs }}
                                        {% endif %}
                                    {% elseif script.source_type == 4 %}
                                        <a href="{{ app.request.basepath }}/smartai/creature/entry/{{ script.entryorguid }}/text">{{ script.entryorguid|getCreatureName }} - Text</a>
                                    {% elseif script.source_type == 5 %}
                                        PathID {{ script.entryorguid }} - Point {{ script.path }} - Pause {{ script.info1 }}ms
                                    {% elseif script.source_type == 9 %}
                                        <a href="{{ app.request.basepath }}/smartai/script/{{ script.entryorguid }}">{{ script.entryorguid|getScriptName }} - Script {{ script.entryorguid|getScript }}</a>
                                    {% endif %}
                                </td>
                                <td>{{ script.state|getStateName }}</td>
                                <td>{% if script.validation_date == null %}{% else %}{{ script.validation_date|date("m-j-y G:i:s") }}{% endif %}</td>
                            </tr>
                        {% endif %}
                    {% endfor %}
                    </tbody>
                </table>
            </div>
            {% endif %}
        </div>
        {% if is_granted('ROLE_ADMIN') %}
        <div class="col-md-6">
            <h2>Review</h2>
            <p>Code that needs to be validated before going on production.</p>
            {% if scripts != null %}
            <table class="table table-hover">
                <thead>
                    <th width="17%">User</th>
                    <th width="53%">Code</th>
                    <th width="22%">Date</th>
                    <th width="8%"></th>
                </thead>
                <tbody>
            {% for script in scripts %}
                {% if script.state == 0 %}
                    <tr>
                        <td>{{ script.user|getUsername }}</td>
                        <td>
                            {% if script.source_type == 0 %}
                                {% if script.entryorguid > 0 %}
                                    <a href="{{ app.request.basepath }}/smartai/creature/entry/{{ script.entryorguid }}">{{ script.entryorguid|getCreatureName }}</a>
                                {% else %}
                                    <a href="{{ app.request.basepath }}/smartai/creature/guid/{{ script.entryorguid|abs }}">{{ script.entryorguid|getCreatureName }}</a>
                                {% endif %}
                            {% elseif script.source_type == 1 %}
                                {% if script.entryorguid > 0 %}
                                    <a href="{{ app.request.basepath }}/smartai/object/entry/{{ script.entryorguid }}">{{ script.entryorguid|getGOName }}</a>
                                {% else %}
                                    <a href="{{ app.request.basepath }}/smartai/object/guid/{{ script.entryorguid|abs }}">{{ script.entryorguid|getGOName }}</a>
                                {% endif %}
                            {% elseif script.source_type == 3 %}
                                {% if script.path > 0 %}
                                    <a href="{{ app.request.basepath }}/smartai/creature/entry/{{ script.entryorguid }}">{{ script.entryorguid|getCreatureName }}</a> - Set Path {{ script.path }}
                                {% else %}
                                    <a href="{{ app.request.basepath }}/smartai/creature/entry/{{ script.entryorguid }}">{{ script.entryorguid|getCreatureName }}</a> - Replace with Path {{ script.path|abs }}
                                {% endif %}
                            {% elseif script.source_type == 4 %}
                                <a href="{{ app.request.basepath }}/smartai/creature/entry/{{ script.entryorguid }}/text">{{ script.entryorguid|getCreatureName }} - Text</a>
                            {% elseif script.source_type == 5 %}
                                PathID {{ script.entryorguid }} - Point {{ script.path }} - Pause {{ script.info1 }}ms
                            {% elseif script.source_type == 9 %}
                                <a href="{{ app.request.basepath }}/smartai/script/{{ script.entryorguid }}">{{ script.entryorguid|getScriptName }} - Script {{ script.entryorguid|getScript }}</a>
                            {% endif %}
                            </li>
                        </td>
                        <td>{{ script.date|date("m-j-y G:i:s") }}</td>
                        <td>
                            <span class="glyphicon glyphicon-ok" onclick="validate({{ script.entryorguid }}, {{ script.source_type }}, this)"></span>
                            <span class="glyphicon glyphicon-remove" onclick="disprove({{ script.entryorguid }}, {{ script.source_type }}, this)"></span>
                        </td>
                    </tr>
                {% endif %}
            {% endfor %}
                </tbody>
            </table>
            {% else %}
                <p>Nothing to review!</p>
            {% endif %}
        </div>
        {% endif %}
        {% endblock %}
        {% block script %}
            <script type="text/javascript">
                function validate(Entry, Type, span) {
                    var Review = { "entryorguid": Entry, "source_type": Type, "user": "{{ app.user.id }}", "state": "1" };
                    $.ajax({
                        type: "POST",
                        url: '/review/edit',
                        data: 'review=' + JSON.stringify(Review),
                        success: function (data) {
                            console.log(Date() + " - " + data);
                            //$(span).closest('tr').remove();
                        },
                        error: function (xhr, err) {
                            console.log("readyState: " + xhr.readyState + "\nstatus: " + xhr.status);
                            console.log(xhr.responseText);
                        }
                    });
                }
                function disprove(Entry, Type, span) {
                    var Review = { "entryorguid": Entry, "source_type": Type, "user": "{{ app.user.id }}", "state": "2" };
                    $.ajax({
                        type: "POST",
                        url: '/review/edit',
                        data: 'review=' + JSON.stringify(Review),
                        success: function (data) {
                            console.log(Date() + " - " + data);
                            $(span).closest('tr').remove();
                        },
                        error: function (xhr, err) {
                            console.log("readyState: " + xhr.readyState + "\nstatus: " + xhr.status);
                            console.log(xhr.responseText);
                        }
                    });
                }
            </script>
        {% endblock %}